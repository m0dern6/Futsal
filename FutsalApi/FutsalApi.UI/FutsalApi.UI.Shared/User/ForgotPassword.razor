@page "/forgot-password"
@using FutsalApi.Data.Models
@using Auth
@inject HttpClient Http

<PageTitle>Forgot Password</PageTitle>

<h1>Forgot Password</h1>

<EditForm Model="@forgotPasswordRequest" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label for="email">Email</label>
        <InputText id="email" @bind-Value="forgotPasswordRequest.Email" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Send Reset Link</button>
</EditForm>

@code {
    private ForgotPasswordRequest forgotPasswordRequest = new();

    private async Task HandleValidSubmit()
    {
        await Http.PostAsJsonAsync("User/forgotPassword", forgotPasswordRequest);
        // Display a confirmation message to the user
    }
}
