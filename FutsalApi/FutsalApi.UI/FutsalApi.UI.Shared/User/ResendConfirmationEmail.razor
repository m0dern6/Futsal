@page "/resend-confirmation-email"
@using FutsalApi.Data.Models
@using Auth
@inject HttpClient Http

<PageTitle>Resend Confirmation Email</PageTitle>

<h1>Resend Confirmation Email</h1>

<EditForm Model="@resendRequest" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label for="email">Email</label>
        <InputText id="email" @bind-Value="resendRequest.Email" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Resend Confirmation Email</button>
</EditForm>

@code {
    private ResendConfirmationEmailRequest resendRequest = new();

    private async Task HandleValidSubmit()
    {
        await Http.PostAsJsonAsync("User/resendConfirmationEmail", resendRequest);
        // Display a success message to the user
    }
}
